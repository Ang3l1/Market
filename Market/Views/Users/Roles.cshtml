@model Market.ViewModel.UserView
@{
    ViewBag.Title = "Roles";
}

<h2>Roles for @Model.Name</h2>
<p>
    @Html.ActionLink("Add Role", "AddRole", new { userId = Model.UserId }, new { @class = "btn btn-primary"})
    @Html.ActionLink("Back to list", "Index", new { }, new { @class = "btn btn-default" })
</p>
<table class="table">
    @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Roles[i].RoleName)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { userId = Model.UserId, roleId = Model.Roles[i].RoleId })
            </td>
        </tr>
    }

</table>
